<!--로그인 연결완료-->

<div class="w-section main_login">
    <div class="w-container">
      <div class="wrap_login">
        <div class="w-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" id="emailform">
              <%= f.email_field :email, :id => "email", :class => 'mdl-textfield__input', :pattern => "*@*", autofocus: true %>
              <%= f.label :email, "이메일", :class => "mdl-textfield__label", :for => "email" %>
              <span class="mdl-textfield__error">제대로 입력해주세요</span>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password, :id => "pwd", :class => 'mdl-textfield__input', autocomplete: "off" %>
              <%= f.label :password, "비밀번호", :class => "mdl-textfield__label", :for => "pwd" %>
              <span class="mdl-textfield__error">제대로 입력해주세요</span>
            </div>
            <div class="mdl-textfield" id="others">
              <% if devise_mapping.rememberable? -%>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" id="check" for="keeplogin">
                  <%= f.check_box :remember_me, :id => "keeplogin", :class => "mdl-checkbox__input" %>
                  <span class="mdl-checkbox__label">로그인 유지</span>
                </label>
              <% end -%>
                <span class="pw_signup"><a href="/dusers/password/new">비밀번호 찾기</a>&nbsp;|
                <a href="/dusers/sign_up">회원가입</a></span>
            </div>
              <%= f.submit "로그인", :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--accent', :id => "loginbutton" %>
          <% end %>
          
          <!--추후구현-->
          <!--<div class="socialbuttonwrapper" style="margin-top:20px; margin-bottom:20px;">-->
          <!--  <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" id="fb_login">Facebook</button>-->
          <!--  <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" id="insta_login">Instagram</button>-->
          <!--</div>-->
          
        </div>
      </div>
    </div>
  </div>
  

  
