<!--로그인 연결완료-->

<div class="w-section main_login">
    <div class="w-container">
      <div class="wrap_login">
        <div class="w-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form id="email-form" name="email-form" data-name="Email Form">
            <%= f.email_field :email, :class => 'w-input idpw_submit', :placeholder => '이메일주소', autofocus: true %>
            <%= f.password_field :password, :class => 'w-input idpw_submit', :placeholder => '비밀번호', autocomplete: "off" %>
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
                  <label for="duser_remember_me">로그인 유지</label>
            <% end -%>
              <%= f.submit "로그인", :class => 'w-button sign_in_submit' %>
            <% end %>

            <div>
              <a class="pw_signup" href="/dusers/password/new">비밀번호 찾기</a> /
              <a class="pw_signup" href="/dusers/sign_up">회원가입</a>
            </div>
            
            <a class="w-button fb_login" href="#">Facebook 로그인</a>
            <a class="w-button insta_login" href="#">Instagram 로그인</a>
          </form>
          <div class="w-form-done">
            <p>Thank you! Your submission has been received!</p>
          </div>
          <div class="w-form-fail">
            <p>Oops! Something went wrong while submitting the form</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  

  
